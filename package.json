{
  "name": "p&id-smart-digitizer",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "P&ID Smart Digitizer - Server Architecture Version for Intranet Deployment",
  "homepage": "https://khk9897.github.io/P-ID-Tag-Extractor",
  "scripts": {
    "dev": "echo 'Use: npm run server:dev OR npm run client:dev'",
    "build": "echo 'Use: npm run server:build AND npm run client:build'",
    "server:dev": "cd server && npm run dev",
    "server:build": "cd server && npm run build",
    "server:start": "cd server && npm run start",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "test:all": "cd server && npm run test",
    "lint": "cd server && npm run lint && cd ../client && npm run lint",
    "typecheck": "cd server && npm run typecheck && cd ../client && npm run typecheck"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.1",
    "@typescript-eslint/parser": "^8.28.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.16",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
